<TakeOrderScreen>:
    name: 'TakeOrder'
    md_bg_color:"ffefd5"

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        size_hint: .75, .75
        pos_hint: {'center_x':.5, 'center_y':.5}

        MDFloatLayout:
            orientation: "horizontal"
            size_hint: .9, .1
            pos_hint: {'center_x':.5, 'center_y':.5}
            halign: "center"

            MDRaisedButton:
                id: back
                text: "<< Back"
                md_bg_color:"FFC697"
                text_color:"a0522d"
                size_hint: .1, .3
                pos_hint: {'center_x':0, 'center_y':.5}
                on_press:
                    root.go_back_to_menu()
                    app.changed()

            MDLabel:
                text: "Order"
                font_size: "50"
                halign: "center"
                font_size: 60
                size_hint: 1, .1
                pos_hint: {'center_x':.5, 'center_y':.5}

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, .25
            spacing: dp(20)

            MDBoxLayout:
                orientation:"vertical"
                pos_hint: {'center_x':.5, 'center_y':.5}
                md_bg_color: "ffffff"
                radius: 35
                padding: dp(20)

                MDBoxLayout:
                    orientation: "horizontal"

                    MDLabel:
                        text: "Model: "
                        font_size: "40"
                        size_hint: .3,1
                        pos_hint: {'center_x':.5, 'center_y':.5}

                    MDLabel:
                        id: model
                        font_size: "40"
                        text:""
                        pos_hint: {'center_x':.5, 'center_y':.5}

                MDDropDownItem:
                    id: dropdown_model1
                    text: "Choose model"
                    height:"40"
                    size_hint_y:None
                    on_release: root.drop_menu(self,dropdown_model1)

            MDBoxLayout:
                orientation:"vertical"
                pos_hint: {'center_x':.5, 'center_y':.5}

                MDLabel:
                    text: "Model"
                    halign:"center"
                    font_size: "40"
                    pos_hint: {'center_x':.5, 'center_y':.5}
#                    pos_hint: {'center_x': .7, 'center_y': 1}

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, .25
            spacing: dp(20)

            MDBoxLayout:
                orientation:"vertical"
                pos_hint: {'center_x':.5, 'center_y':.5}
                md_bg_color: "ffffff"
                radius: 35
                padding: dp(20)
                MDBoxLayout:
                    orientation: "horizontal"
                    MDLabel:
                        text: "Wax: "
                        font_size: "40"
                        size_hint: .25,1
                        pos_hint: {'center_x':.5, 'center_y':.5}
                    MDLabel:
                        id: wax
                        text:""
                        font_size: 40
                        pos_hint: {'center_x':.5, 'center_y':.5}
                MDDropDownItem:
                    id: dropdown_wax
                    text: "Choose wax"
                    height:"40"
                    size_hint_y:None
                    on_release: root.drop_menu(self,dropdown_wax)

            MDBoxLayout:
                orientation:"vertical"
                pos_hint: {'center_x':.5, 'center_y':.5}
                md_bg_color: "ffffff"
                radius: 35
                padding: dp(20)
                MDBoxLayout:
                    orientation: "horizontal"
                    MDLabel:
                        text: "Amount: "
                        font_size: "40"
                        size_hint: .4,1
                        pos_hint: {'center_x':.5, 'center_y':.5}
                    MDLabel:
                        id: amount
                        font_size: 40
                        pos_hint: {'center_x':.5, 'center_y':.5}
                MDDropDownItem:
                    id: dropdown_amount
                    text: "Choose amount"
                    height:"40"
                    size_hint_y:None
                    on_release: root.drop_amount(self,dropdown_amount)

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, .25
            spacing: dp(20)

            MDBoxLayout:
                orientation:"vertical"
                pos_hint: {'center_x':.5, 'center_y':.5}
                md_bg_color: "ffffff"
                radius: 35
                padding: dp(20)

                MDBoxLayout:
                    orientation: "horizontal"

                    MDLabel:
                        text: "Scent: "
                        font_size: "40"
                        size_hint: .3,1
                        pos_hint: {'center_x':.5, 'center_y':.5}
                    MDLabel:
                        id: scent
                        text:""
                        font_size: "40"
                        pos_hint: {'center_x': .5, 'center_y': .5}

                MDDropDownItem:
                    id: dropdown_scent
                    text: "Choose scent"
                    height:"40"
                    size_hint_y:None
                    on_release: root.drop_menu(self, dropdown_scent)


            MDBoxLayout:
                orientation:"vertical"
                pos_hint: {'center_x':.5, 'center_y':.5}
                md_bg_color: "ffffff"
                radius: 35
                padding: dp(20)
                MDBoxLayout:
                    orientation: "horizontal"
                    MDLabel:
                        text: "Package: "
                        font_size: "40"
                        size_hint: .4,1
                        pos_hint: {'center_x':.5, 'center_y':.5}
                    MDLabel:
                        id: package
                        text:""
                        pos_hint: {'center_x': .5, 'center_y': .5}

                MDDropDownItem:
                    id: dropdown_package
                    text: "Choose package"
                    height:"40"
                    size_hint_y:None
                    on_release: root.drop_package(self, dropdown_package)

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1,.25
            spacing: 100

            MDRoundFlatIconButton:
                id: more_candle
                size_hint: .5,.5
                text:"Create another candle"
                icon: "candle"
                md_bg_color: "FFF9CE"
                icon_color:"a0522d"
                text_color:"a0522d"
                line_color: "a0522d"
                line_width: 2
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    root.make_more_candle()

            MDRoundFlatIconButton:
                id: go_to_check
                size_hint: .5,.5
                icon: "credit-card-outline"
                text:"Go to Payment"
                icon: "candle"
                md_bg_color: "FFF9CE"
                icon_color:"a0522d"
                text_color:"a0522d"
                line_color: "a0522d"
                line_width: 2
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    root.go_to_check()

