<MenuScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        size_hint: .8, .8
        pos_hint: {'center_x':.5, 'center_y':.5}

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, .25
            halign: "center"


            MDRaisedButton:
                id: back
                text: "<< Back"
                size_hint: .1, .4
                pos_hint: {'center_x':.5, 'center_y':.5}
                on_press:
                    root.go_back_to_home()
                    app.changed()

            MDLabel:
                text: "Menu"
                font_size: "50"
                halign: "center"
                size_hint: 1, .08
                pos_hint: {'center_x':.5, 'center_y':.5}


        MDRaisedButton:
            id: Take_order
            text: "Take Order"
            font_size: "80"
            spacing: dp(10)
            on_press:root.screen_change(self)
            size_hint:  .8, .05
            pos_hint: {'center_x':.5}

        MDRaisedButton:
            id: Description
            text: "Check Descriptions"
            font_size: "80"
            spacing: dp(10)
            on_press:root.screen_change(self)
            size_hint: .8, .05
            pos_hint: {'center_x':.5}

        MDRaisedButton:
            id: CheckOrder
            text: "Check Order"
            font_size: "80"
            spacing: dp(10)
            on_press:root.screen_change(self)
            size_hint:  .8,.05
            pos_hint: {'center_x':.5}

        MDRaisedButton:
            id: Inventory
            text: "Purchase materials"
            font_size: "80"
            on_press:root.screen_change(self)
            size_hint: .8, .05
            pos_hint: {'center_x':.5}

        MDRaisedButton:
            id: Ledger
            text: "Check ledger"
            font_size: "80"
            on_press:root.screen_change(self)
            size_hint: .8, .05
            pos_hint: {'center_x':.5}

        MDRaisedButton:
            id: create_menu
            text: "Create menu"
            font_size: "80"
            on_press:root.screen_change(self)
            size_hint: .8, .05
            pos_hint: {'center_x':.5}


















