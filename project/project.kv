<SignupScreen>:
    FitImage:
        source: 'Project_Images/raceimage.jpeg'
        opacity: .5

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        size_hint: .75, .75
        pos_hint: {'center_x':.5, 'center_y':.5}

        MDFloatLayout:
            orientation: "horizontal"
            size_hint: .9, .1
            pos_hint: {'center_x':.5, 'center_y':.8}
            halign: "center"

            MDRaisedButton:
                id: back
                text: "<< Back"
                md_bg_color:"FFC697"
                text_color:"a0522d"
                size_hint: .1, .03
                pos_hint: {'center_x':0, 'center_y':.8}
                on_press:
                    root.go_back_to_home()
                    app.changed()

            MDLabel:
                text: "Sign up"
                font_size: "50"
                halign: "center"
                font_size: 60
                size_hint: 1, .1
                pos_hint: {'center_x':.5, 'center_y':.8}

        MDBoxLayout:
            orientation:"vertical"
            md_bg_color: "ffffff"
            padding: 25
            spacing: dp(15)
            opacity:.8
            size_hint_x: .7
            pos_hint:{'center_x':.5, 'center_y':.5}

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y:  .25
                size_hint_x: None
                width: dp(400)
                pos_hint: {'center_x':.5, 'center_y':.5}

                MDLabel:
                    text: "Username"

                MDTextField:
                    id: uname
                    hint_text:"Enter username"
                    max_text_length: 15

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y:  .25
                size_hint_x: None
                pos_hint: {'center_x':.5, 'center_y':.5}
                width: dp(400)

                MDLabel:
                    text: "Password"

                MDFloatLayout:
                    orientation: "horizontal"

                    MDTextField:
                        id: upass
                        hint_text:"Enter password"
                        password: True
                        icon_left: "key-variant"
                        pos_hint: {"center_x":.5,"center_y": .5}
#                        max_text_length: 8

                    MDIconButton:
                        icon: "eye-off"
                        pos_hint: {"center_x":.95,"center_y": .5}
                        theme_text_color: "Hint"
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            upass.password = False if upass.password is True else True

            MDBoxLayout:
                orientation: "vertical"
                size_hint: 1, .25
                size_hint_x: None
                pos_hint: {'center_x':.5, 'center_y':.5}
                width: dp(400)

                MDLabel:
                    text: "Password (confirmation)"

                MDFloatLayout:
                    orientation: "horizontal"

                    MDTextField:
                        id: upass_conf
                        hint_text:"Enter password again"
                        password: True
                        icon_left: "key-variant"
                        pos_hint: {"center_x":.5,"center_y": .5}
#                        max_text_length: 8


                    MDIconButton:
                        icon: "eye-off"
                        pos_hint: {"center_x":.95,"center_y": .5}
                        theme_text_color: "Hint"
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            upass_conf.password = False if upass_conf.password is True else True


                MDFillRoundFlatButton:
                    id: signup
                    text: "SignUp"
                    text_color: "a0522d"
                    font_size: "50"
                    color: "a0522d"
                    line_color:"a0522d"
                    opacity: 1
                    md_bg_color: "FFF9CE"
                    on_press: root.try_signup()
                    size_hint: .3, .2
                    pos_hint: {'center_x':.5, 'center_y':.5}



