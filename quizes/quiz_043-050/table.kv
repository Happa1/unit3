#table.kv

ScreenManager:
    id: scroll_x,aanger
    TableScreen:
        font_name:"TableScreen"

<TableScreen>:
    MDLabel:
        pos_hint: {'center_x':.5, 'top':.9}
        text: 'Ledger'
        font_style: 'H2'
        halign: 'center'
        size_hint: 0.8, 0.08

    MDLabel:
        text: "New Record"
        font_style: 'H4'
        pos_hint: {'center_x':.5, 'top':.3}

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: .8, .08
        pos_hint: {'center_x': .5, 'center_y':.2}

        MDTextField:
            id: sender
            on_hint_text: 'Sender'
            size_hint_x: .2
        MDTextField:
            id: receiver
            on_hint_text: 'Receiver'
            size_hint_x: .2
        MDTextField:
            id: amount
            filter: 'integer'
            on_hint_text: 'Amount'
            size_hint_x: .2

        MDRaisedButton:
            text: "save"
            on_release: root.save()
