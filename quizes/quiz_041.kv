Screen:
    size: 500,500

    MDBoxLayout:
        size_hint: .8, .8
        pos_hint: {"center_x":.5, "center_y":.5}
        orientation:"vertical"

        MDLabel:
            size_hint: 1, .1
            pos_hint: {"center_x":.5, "center_y":.5}
            text: "Tic Tac Toe by student_name"
            font_size: "24pt"
            halign: "center"

        MDLabel:
            size_hint: 1, .1
            pos_hint: {"center_x":.5, "center_y":.5}
            text: "It is X's turn"
            bold: True
            font_size: "15pt"
            halign: "center"

        MDBoxLayout:
            size_hint: 1, .7
            orientation: "vertical"
            padding: dp(2)

            MDBoxLayout:
                orientation:"horizontal"
                size_hint: 1,.25
                color: "white"
                md_bg_color:"white"
                MyButton:
                MyButton:
                MyButton:

            MDBoxLayout:
                orientation:"horizontal"
                size_hint: 1,.25
                md_bg_color:"white"
                MyButton:
                MyButton:
                MyButton:

            MDBoxLayout:
                orientation:"horizontal"
                size_hint: 1,.25
                md_bg_color:"white"
                MyButton:
                MyButton:
                MyButton:

<MyButton>:
    size_hint: 1,1
    padding: dp(2)
    MDFlatButton:
        size_hint: 1,1
        md_bg_color:"#7ebea5"
        padding: dp(2)
        on_press:
            app.button_pressed(self)